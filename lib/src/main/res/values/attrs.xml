<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="BubbleNavigationView">
        <attr name="bnv_menuResource" format="reference" />
        <attr name="bnv_hideOnScroll" format="boolean" />
        <attr name="bnv_addBottomInset" format="boolean" />
        <attr name="bnv_addTopInset" format="boolean" />
        <attr name="bnv_addLeftInset" format="boolean" />
        <attr name="bnv_addRightInset" format="boolean" />
        <attr name="bnv_orientationMode">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ChipsMenuView">
        <attr name="chipsmenu_menuResource" format="reference" />
        <attr name="chipsmenu_hideOnScroll" format="boolean" />
        <attr name="chipsmenu_applyBottomInset" format="boolean" />
        <attr name="chipsmenu_tabletModeEnabled" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ChipsMenu">
        <attr name="chipsmenu_badgeColor" format="color" />
        <attr name="chipsmenu_disabledColor" format="color" />
        <attr name="chipsmenu_unselectedColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ChipsMenuItem">
        <attr name="android:id" />
        <attr name="android:title" />
        <attr name="android:icon" />
        <attr name="android:enabled" />
        <attr name="chipsmenu_iconActiveTintColor" format="color" />
        <attr name="chipsmenu_iconTintMode">
            <enum name="src_over" value="3" />
            <enum name="src_in" value="5" />
            <enum name="src_atop" value="9" />
            <enum name="multiply" value="14" />
            <enum name="screen" value="15" />
        </attr>
        <attr name="chipsmenu_textActiveColor" format="color" />
        <attr name="chipsmenu_chipsBackgroundColor" format="color" />
    </declare-styleable>

</resources>